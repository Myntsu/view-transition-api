---
// astro imports
import { Icon } from "astro-icon";
---

<section class="user-feedback">
  <h1>
    Desafíos pendientes:
    <span class="desafios-pendientes"> 4</span>
  </h1>
  <h2>
    Cursos activos:
    <span class="cursos-activos">1</span>
  </h2>
  <hr />
  <h3>Notificaciones</h3>
  <div class="notifications">
    <div>
      <p>
        <Icon class="icon" name="ic:baseline-notifications-active" /> 
        Brayan ha revisado tu desafío 
        <Icon class="icon" name="ic:baseline-plus" />
      </p>
    </div>
    <div>
      <p>
        <Icon class="icon" name="ic:baseline-notifications-active" /> 
        Módulo 6 cierra en 2 días 
        <Icon class="icon" name="ic:baseline-plus" />
      </p>
    </div>
    <div>
      <p>
        <Icon class="icon" name="ic:baseline-notifications-active" /> 
        Brayan ha revisado tu desafío 
        <Icon class="icon" name="ic:baseline-plus" />
      </p>
    </div>
  </div>
</section>

<style lang="scss">
.user-feedback {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;

  height: 155px;
  padding: 0.5rem;
  padding-block-end: 0;
  color: hsl(var(--text));
  background: hsl(var(--main-light));
  border: 1px solid hsl(var(--main-light));

  box-shadow: 2px 2px 10px hsl(var(--main-shadow) / 0.5);

  h1,
  h2,
  h3 {
    display: flex;

    span {
      margin-inline-start: auto;
    }
  }

  h2 {
    color: hsl(var(--text-gray));
  }

  hr {
    width: 75%;
  }

  h3 {
    color: hsl(var(--important));
    text-transform: uppercase;
    gap: 0.25rem;
  }

  .notifications {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    overflow: hidden;

    & > div {
      padding: 0.5rem;
      background-color: hsl(var(--important));
      border-radius: 0.25rem;
      cursor: pointer;

      p {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: hsl(var(--main-light));

        .icon {
          width: 20px; 
        }

        & > :last-child {
          margin-inline-start: auto;
        }
      }
    }
  }
}
</style>